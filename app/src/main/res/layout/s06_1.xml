<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".S06_1"
    android:background="@drawable/array4">

    <ProgressBar
        android:id="@+id/progbar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="100"
        android:progress="0"
        android:background="#40000000"
        android:progressBackgroundTint="#4E65E6"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 %"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#75FFFFFF"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnMove_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move"
        style="@style/custumButton_1_0"
        android:onClick="pbClk"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnAmove_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Move"
        style="@style/custumButton_1_0"
        android:onClick="pbClk"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnStop_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop"
        style="@style/custumButton_1_0"
        android:onClick="pbClk"
        android:textSize="20dp"/>
</LinearLayout>